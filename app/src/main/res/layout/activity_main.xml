<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="somdosbichos.cursoandroid.com.somdosbichos.MainActivity"
    android:background="#f5e9b9">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageLogo"
        android:background="@drawable/logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="@dimen/imagem_largura"
        android:layout_height="@dimen/imagem_altura"
        android:id="@+id/imagemCachorroId"
        android:background="@drawable/cao"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_below="@+id/imageLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="@dimen/imagem_largura"
        android:layout_height="@dimen/imagem_altura"
        android:id="@+id/imagemGatoId"
        android:background="@drawable/gato"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_alignTop="@+id/imagemCachorroId"
        android:layout_toRightOf="@+id/imagemCachorroId"
        android:layout_toEndOf="@+id/imagemCachorroId" />

    <ImageView
        android:layout_width="@dimen/imagem_largura"
        android:layout_height="@dimen/imagem_altura"
        android:id="@+id/imagemLeaoId"
        android:background="@drawable/leao"
        android:layout_below="@+id/imagemCachorroId"
        android:layout_toLeftOf="@+id/imagemGatoId"
        android:layout_toStartOf="@+id/imagemGatoId" />

    <ImageView
        android:layout_width="@dimen/imagem_largura"
        android:layout_height="@dimen/imagem_altura"
        android:id="@+id/imagemMacadoId"
        android:background="@drawable/macaco"
        android:layout_below="@+id/imagemGatoId"
        android:layout_alignLeft="@+id/imagemGatoId"
        android:layout_alignStart="@+id/imagemGatoId" />

    <ImageView
        android:layout_width="@dimen/imagem_largura"
        android:layout_height="@dimen/imagem_altura"
        android:id="@+id/imagemOvelhaId"
        android:background="@drawable/ovelha"
        android:layout_below="@+id/imagemLeaoId"
        android:layout_alignLeft="@+id/imagemLeaoId"
        android:layout_alignStart="@+id/imagemLeaoId" />

    <ImageView
        android:layout_width="@dimen/imagem_largura"
        android:layout_height="@dimen/imagem_altura"
        android:id="@+id/imagemVacaId"
        android:background="@drawable/vaca"
        android:layout_alignTop="@+id/imagemOvelhaId"
        android:layout_alignLeft="@+id/imagemMacadoId"
        android:layout_alignStart="@+id/imagemMacadoId" />
</RelativeLayout>
